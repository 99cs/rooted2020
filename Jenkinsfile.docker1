pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'docker volume ls'
            }
        }
        stage('Test') {
            steps {
                sh 'docker run --mount source="secret",target=/app alpine ls /app && cat /app/secret'
            }
        }
    }
}
